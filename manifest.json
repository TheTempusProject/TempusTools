{
    "manifest_version": 2,
    "name": "Tempus Tools",
    "description": "Tools for using and debugging The Tempus Project",
    "version": "1.0.0",
    "icons":
    {
        "128": "images/icon_128.png"
    },
    "browser_action":
    {
        "default_icon": "images/icon.png",
        "default_popup": "html/popup.html"
    },
    "permissions": ["activeTab", "webRequestBlocking", "webRequest", "tabs", "http://*/*", "https://*/*", "storage"],
    "devtools_page": "html/devtools.html",
    "minimum_chrome_version": "21",
    "background":
    {
        "scripts": ["js/background.js"]
    },
    "options_page": "html/options.html"
}